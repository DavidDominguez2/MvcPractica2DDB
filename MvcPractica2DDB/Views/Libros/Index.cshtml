@model List<Libro>
@{
    int registros = (int)ViewData["REGISTROS"];
    int cont = 1;
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Todos los libros Paginados</h1>
            <p class="lead fw-normal text-white-50 mb-0">Welcome to <b>DDB Readings</b></p>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach(Libro libro in Model) {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/images/@libro.Portada" alt="..." width="200" height="400">
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@libro.Titulo</h5>
                                <!-- Product price-->
                                @libro.Precio €
                        </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" asp-action="Details" asp-controller="Libros" asp-route-idlibro="@libro.IdLibro">Comprar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

   <div class="row">
       <div class="col-12">
            @for (int i = 0; i < registros; i += 10) {
                <a class="btn btn-outline-dark" asp-controller="Libros" asp-action="Index" asp-route-posicion="@i">@(cont++)</a>
            }
       </div>
   </div>
</section>
<footer class="py-5 bg-dark">
    <div class="container"><p class="m-0 text-center text-white">Copyright © Your Website 2023</p></div>
</footer>

